pan class="hljs-number">0</span>;j&lt;n;j++)&#123;<br>            <span class="hljs-keyword">if</span>(k[j]&lt;i)a[m[j]].sum+=k[j];<br>            <span class="hljs-keyword">else</span> a[m[j]].sum+=i;<br>        &#125;<br>        <span class="hljs-built_in">sort</span>(a,a+<span class="hljs-number">200001</span>);<br>        <span class="hljs-type">double</span> res=<span class="hljs-number">0</span>;<br>        vector&lt;<span class="hljs-type">int</span>&gt;temp;<br>        <span class="hljs-keyword">for</span>(<span class="hljs-type">int</span> j=<span class="hljs-number">0</span>;j&lt;i;j++)&#123;<br>            res+=a[j].sum;<br>            temp.<span class="hljs-built_in">emplace_back</span>(a[j].k);<br>        &#125;<br>        res/=i;<br>        <span class="hljs-keyword">if</span>(res&gt;maxn)&#123;<br>            maxn=res;<br>            ans=temp;<br>        &#125;<br>    &#125;<br>    <span class="hljs-built_in">printf</span>(<span class="hljs-string">&quot;%d\n&quot;</span>,ans.<span class="hljs-built_in">size</span>());<br>    <span class="hljs-keyword">for</span>(<span class="hljs-keyword">auto</span> i:ans)<span class="hljs-built_in">printf</span>(<span class="hljs-string">&quot;%d &quot;</span>,i);<br>    <span class="hljs-built_in">printf</span>(<span class="hljs-string">&quot;\n&quot;</span>);<br>&#125;<br><span class="hljs-function"><span class="hljs-type">int</span> <span class="hljs-title">main</span><span class="hljs-params">()</span> </span>&#123;<br>    <span class="hljs-type">int</span> t;<br>    <span class="hljs-comment">//scanf(&quot;%d&quot;,&amp;t);while(t--)</span><br>    <span class="hljs-built_in">solve</span>();<br>    <span class="hljs-keyword">return</span> <span class="hljs-number">0</span>;<br>&#125;<br></code></pre></td></tr></table></figure>]]></content>
    
    
    
